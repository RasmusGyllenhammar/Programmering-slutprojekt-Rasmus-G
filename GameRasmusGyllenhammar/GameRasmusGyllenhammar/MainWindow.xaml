<Window x:Class="GameRasmusGyllenhammar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameRasmusGyllenhammar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas Name="myCanvas" Background="LightBlue" Focusable="True" KeyDown="KeyIsDown" KeyUp="KeyIsUp">
        <Label Name="redPlayerLabel" Content="Red Score: " Background="white"/>
        <Label Name="greenPlayerLabel"  Canvas.Left="670" Content="Green Score: " Background="White"/>
        <Line   X1="400" Y1="0" X2="400" Y2="500" Stroke="Black" StrokeDashArray="2, 4" StrokeThickness="5" />
        <Rectangle Name="player" Height="130" Width="27" Fill="red" Canvas.Left="40" Canvas.Top="250" Tag="paddle"/>
        <Rectangle Name="playerTwo" Height="130" Width="27" Fill="Green" Canvas.Left="720" Canvas.Top="250" Tag="paddle"/>
        
        <Rectangle Name="ball" Height="25" Width="25" Fill="white" Canvas.Left="400" Canvas.Top="300" />
            
    </Canvas>
</Window>
